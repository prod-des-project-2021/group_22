<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard"
    android:background="@drawable/claudiu"
    android:padding="10dp">

    <TextView
        android:id="@+id/today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TODAY"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="25sp"/>
    <TextView
        android:id="@+id/datetoday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEPTEMBER 15, 2021"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_marginTop="30sp"/>
    <View
        android:layout_width="360dp"
        android:layout_height="5dp"
        android:background="@android:color/white"
        android:layout_marginTop="56dp"
        android:layout_centerHorizontal="true"/>

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:indeterminateOnly="false"
        android:progressDrawable="@drawable/circle"
        android:progress="60"/>

    <TextView
        android:id="@+id/caloriesdone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/progressbar"
        android:layout_alignBottom="@+id/progressbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="85dp"
        android:text="2000"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/caloriestodo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/progressbar"
        android:layout_alignBottom="@+id/progressbar"
        android:layout_marginStart="285dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="100dp"
        android:text="2000"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="23sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/progressbar"
        android:layout_alignBottom="@+id/progressbar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="85dp"
        android:text="DAILY CALS"
        android:textColor="@color/white"
        android:textSize="15sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/progressbar"
        android:layout_alignBottom="@+id/progressbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="115dp"
        android:layout_marginBottom="60dp"
        android:text="CALORIES"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="12sp" />

    <ImageButton
        android:id="@+id/addquickcalories"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="110dp"
        android:src="@drawable/ic_fire36dp"
        android:background="?selectableItemBackground"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CALORIES"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_marginTop="150dp"
        android:layout_marginStart="20dp"/>

    <View
        android:layout_width="360dp"
        android:layout_height="5dp"
        android:background="@android:color/white"
        android:layout_marginTop="240dp"
        android:layout_centerHorizontal="true"/>












    <ProgressBar
        android:id="@+id/progressbarwater"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240dp"
        android:indeterminateOnly="false"
        android:progressDrawable="@drawable/circle"
        android:progress="60"/>

    <TextView
        android:id="@+id/waterdone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/progressbarwater"
        android:layout_alignBottom="@+id/progressbarwater"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="85dp"
        android:text="3"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/watertodo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/progressbarwater"
        android:layout_alignBottom="@+id/progressbarwater"
        android:layout_marginStart="310dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="100dp"
        android:text="6"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="23sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/progressbarwater"
        android:layout_alignBottom="@+id/progressbarwater"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="85dp"
        android:text="DAILY WATER"
        android:textColor="@color/white"
        android:textSize="15sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/progressbarwater"
        android:layout_alignBottom="@+id/progressbarwater"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="115dp"
        android:layout_marginBottom="60dp"
        android:text="LITERS"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="12sp" />

    <ImageButton
        android:id="@+id/addwater"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="300dp"
        android:background="?selectableItemBackground"
        android:src="@drawable/ic_water" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WATER"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_marginTop="340dp"
        android:layout_marginStart="30dp"/>

    <View
        android:layout_width="360dp"
        android:layout_height="5dp"
        android:background="@android:color/white"
        android:layout_marginTop="430dp"
        android:layout_centerHorizontal="true"/>











    <ProgressBar
        android:id="@+id/progressbarkg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="430dp"
        android:indeterminateOnly="false"
        android:progressDrawable="@drawable/circle"
        android:progress="100"/>

    <TextView
        android:id="@+id/currentkg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/progressbarkg"
        android:layout_alignBottom="@+id/progressbarkg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="85dp"
        android:text="92"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/kgtolose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/progressbarkg"
        android:layout_alignBottom="@+id/progressbarkg"
        android:layout_marginStart="310dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="100dp"
        android:text="3"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="23sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/progressbarkg"
        android:layout_alignBottom="@+id/progressbarkg"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="85dp"
        android:text="KG GOAL"
        android:textColor="@color/white"
        android:textSize="15sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/progressbarkg"
        android:layout_alignBottom="@+id/progressbarkg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="115dp"
        android:layout_marginBottom="60dp"
        android:text="KG"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="12sp" />

    <ImageButton
        android:id="@+id/updateyourcurrentweight"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="490dp"
        android:background="?selectableItemBackground"
        android:src="@drawable/ic_weight_svgrepo_com" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WEIGHT"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_marginTop="530dp"
        android:layout_marginStart="30dp"/>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/bottom_nav" />




</RelativeLayout>